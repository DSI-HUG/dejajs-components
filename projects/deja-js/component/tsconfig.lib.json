{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../../out-tsc/lib",
        "declarationMap": true,
        "declaration": true,
        "inlineSources": true,
        "lib": [
            "dom",
            "es2020"
        ],
        "types": [
            "ckeditor4"
        ]
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "enableResourceInlining": true,
        "strictTemplates": true,
        "strictAttributeTypes": true
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}
