{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "stripInternal": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "lib": [
            "es2017",
            "dom"
        ]
    }
}