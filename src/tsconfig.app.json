{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "types": [
            "ckeditor"
        ]
    },
    "angularCompilerOptions": {
        "skipTemplateCodegen": true,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "enableResourceInlining": true,
        "strictTemplates": true,
        "strictAttributeTypes": true,
        "enableIvy": true
    },
    "files": [
        "main.ts",
        "polyfills.ts"
    ]
}