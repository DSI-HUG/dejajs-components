{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "module": "es2015",
        "target": "es5",
        "baseUrl": ".",
        "stripInternal": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "outDir": "../build",
        "rootDir": ".",
        "sourceMap": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "skipLibCheck": true,
        "types": [
            "moment"
        ]
    },
    "angularCompilerOptions": {
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "flatModuleOutFile": "dejajs-component.js",
        "flatModuleId": "@deja-js/component"
    },
    "files": [
        "./index.ts"
    ]
}