{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "outDir": "../tmp/lib/",
        "module": "es2015",
        "rootDir": ".",
        "baseUrl": ".",
        "types": [
            "node",
            "moment"
        ]
    },
    "files": [
        "./index.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": false,
        "skipTemplateCodegen": true,
        "genDir": "../tmp/lib-gen-dir/",
        "flatModuleOutFile": "dejajs-component.js",
        "flatModuleId": "@deja-js/component",
        "annotateForClosureCompiler": true
    }
}