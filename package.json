{
    "name": "dejajs-component",
    "description": "Angular Components Library",
    "homepage": "https://github.com/DSI-HUG/dejajs-components",
    "bugs": "https://github.com/DSI-HUG/dejajs-components/issues",
    "author": "Team DSI-HUG - Hôpital Univesitaire de Genève - DSI - Domaine Patient",
    "license": "Apache-2.0",
    "keywords": [
        "angular",
        "material",
        "component"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/DSI-HUG/dejajs-components.git"
    },
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --prod",
        "test": "ng test",
        "test:lib": "ng test @deja-js/component --watch=false",
        "test:lib:watch": "ng test @deja-js/component --watch=true",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --ext .js,.ts --fix",
        "e2e": "ng e2e",
        "license-check": "node scripts/licenses.js",
        "build:lib": "node --max-old-space-size=8192 ./node_modules/@angular/cli/bin/ng build @deja-js/component --configuration=production",
        "build:lib:watch": "node --max-old-space-size=8192 ./node_modules/@angular/cli/bin/ng build @deja-js/component --watch",
        "postinstall": "ngcc",
        "release": "semantic-release --no-ci",
        "release:ci": "semantic-release",
        "analyze": "ng build --statsJson=true  && webpack-bundle-analyzer --port 8989 ./dist/deja-js/component/stats.json",
        "analyze:prod": "ng build --prod=true --statsJson=true && webpack-bundle-analyzer --port 8989 ./dist/deja-js/component/stats.json",
        "commit": "git-cz"
    },
    "dependencies": {
        "@angular/animations": "~12.0.1",
        "@angular/cdk": "~12.0.1",
        "@angular/common": "~12.0.1",
        "@angular/compiler": "~12.0.1",
        "@angular/core": "~12.0.1",
        "@angular/forms": "~12.0.1",
        "@angular/localize": "~12.0.1",
        "@angular/material": "~12.0.1",
        "@angular/platform-browser": "~12.0.1",
        "@angular/platform-browser-dynamic": "~12.0.1",
        "@angular/router": "~12.0.1",
        "ckeditor": "~4.11.0",
        "core-js": "~3.8.2",
        "date-fns": "~2.16.1",
        "json-object-mapper": "~1.6.0",
        "lodash-es": "~4.17.20",
        "material-icons-font": "2.1.0",
        "monaco-editor": "0.21.2",
        "ngx-mask": "11.1.4",
        "prismjs": "~1.23.0",
        "rxjs": "~6.6.3",
        "showdown": "~1.9.1",
        "tslib": "~2.1.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/architect": "~0.1200.1",
        "@angular-devkit/build-angular": "~12.0.1",
        "@angular/cli": "~12.0.1",
        "@angular/compiler-cli": "~12.0.1",
        "@angular/language-service": "~12.0.1",
        "@commitlint/cli": "~11.0.0",
        "@commitlint/config-conventional": "~11.0.0",
        "@hug/eslint-config": "~3.0.0",
        "@qiwi/multi-semantic-release": "~3.12.3",
        "@semantic-release/changelog": "~5.0.1",
        "@semantic-release/git": "~9.0.0",
        "@types/ckeditor": "~4.9.10",
        "@types/jasmine": "~3.6.2",
        "@types/jasminewd2": "~2.0.8",
        "@types/lodash-es": "~4.17.4",
        "@types/node": "~14.14.20",
        "@types/prismjs": "~1.16.2",
        "@types/showdown": "~1.9.3",
        "eslint": "~7.25.0",
        "gh-pages": "~3.1.0",
        "husky": "~4.3.7",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~6.0.0",
        "karma": "~6.3.2",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.3",
        "karma-jasmine": "~4.0.1",
        "karma-jasmine-html-reporter": "~1.5.4",
        "ng-packagr": "~12.0.0",
        "protractor": "~7.0.0",
        "semantic-release": "~17.3.1",
        "ts-node": "~9.1.1",
        "typescript": "~4.2.4",
        "webpack-bundle-analyzer": "^4.1.0"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint --edit"
        }
    }
}