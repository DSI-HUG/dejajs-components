{
    "name": "dejajs-component",
    "description": "Angular Components Library",
    "homepage": "https://github.com/DSI-HUG/dejajs-components",
    "bugs": "https://github.com/DSI-HUG/dejajs-components/issues",
    "author": "Team DSI-HUG - Hôpital Univesitaire de Genève - DSI - Domaine Patient",
    "license": "Apache-2.0",
    "keywords": [
        "angular",
        "material",
        "component"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/DSI-HUG/dejajs-components.git"
    },
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build --prod",
        "test": "ng test",
        "test:lib": "ng test @deja-js/component --watch=false",
        "test:lib:watch": "ng test @deja-js/component --watch=true",
        "lint": "eslint . --ext .js,.ts",
        "lint:fix": "eslint . --ext .js,.ts --fix",
        "e2e": "ng e2e",
        "license-check": "node scripts/licenses.js",
        "build:lib": "node --max-old-space-size=8192 ./node_modules/@angular/cli/bin/ng build @deja-js/component --configuration=production && npm run build:scss",
        "build:lib:watch": "node --max-old-space-size=8192 ./node_modules/@angular/cli/bin/ng build @deja-js/component --watch && npm run build:scss",
        "build:scss": "scss-bundle -c component-scss-bundle.config.json",
        "postinstall": "ngcc",
        "release": "semantic-release --no-ci",
        "release:ci": "semantic-release",
        "commit": "git-cz"
    },
    "dependencies": {
        "@angular/animations": "~10.2.4",
        "@angular/cdk": "~10.2.7",
        "@angular/common": "~10.2.4",
        "@angular/compiler": "~10.2.4",
        "@angular/core": "~10.2.4",
        "@angular/forms": "~10.2.4",
        "@angular/localize": "~10.2.4",
        "@angular/material": "~10.2.7",
        "@angular/material-moment-adapter": "~10.2.7",
        "@angular/platform-browser": "~10.2.4",
        "@angular/platform-browser-dynamic": "~10.2.4",
        "@angular/router": "~10.2.4",
        "angular2-text-mask": "9.0.0",
        "ckeditor": "~4.11.0",
        "core-js": "~3.8.2",
        "json-object-mapper": "~1.6.0",
        "material-icons-font": "2.1.0",
        "moment": "2.29.1",
        "monaco-editor": "0.21.2",
        "prismjs": "~1.23.0",
        "rxjs": "~6.6.3",
        "showdown": "~1.9.1",
        "tslib": "~2.1.0",
        "zone.js": "~0.10.3"
    },
    "devDependencies": {
        "@angular-devkit/architect": "~0.1100.1",
        "@angular-devkit/build-angular": "~0.1002.1",
        "@angular-devkit/build-ng-packagr": "~0.1002.1",
        "@angular-eslint/builder": " ~1.0.0",
        "@angular-eslint/eslint-plugin": " ~1.0.0",
        "@angular-eslint/eslint-plugin-template": " ~1.0.0",
        "@angular-eslint/template-parser": " ~1.0.0",
        "@angular/cli": "~10.2.1",
        "@angular/compiler-cli": "~10.2.4",
        "@angular/language-service": "~10.2.4",
        "@commitlint/cli": "~11.0.0",
        "@commitlint/config-conventional": "~11.0.0",
        "@qiwi/multi-semantic-release": "~3.12.3",
        "@semantic-release/changelog": "~5.0.1",
        "@semantic-release/git": "~9.0.0",
        "@types/ckeditor": "~4.9.10",
        "@types/jasmine": "~3.6.2",
        "@types/jasminewd2": "~2.0.8",
        "@types/lodash": "~4.14.167",
        "@types/node": "~14.14.20",
        "@types/prismjs": "~1.16.2",
        "@types/showdown": "~1.9.3",
        "@typescript-eslint/eslint-plugin": "~4.12.0",
        "@typescript-eslint/parser": "~4.12.0",
        "eslint": "~7.17.0",
        "eslint-plugin-chai-friendly": "~0.6.0",
        "eslint-plugin-cypress": "~2.11.2",
        "eslint-plugin-import": "~2.22.1",
        "eslint-plugin-jsdoc": "~30.7.13",
        "eslint-plugin-no-loops": "~0.3.0",
        "eslint-plugin-prefer-arrow": "~1.2.2",
        "eslint-plugin-rxjs": "~2.1.5",
        "eslint-plugin-rxjs-angular": "~1.0.3",
        "eslint-plugin-simple-import-sort": "~7.0.0",
        "gh-pages": "~3.1.0",
        "husky": "~4.3.7",
        "jasmine-core": "~3.6.0",
        "jasmine-spec-reporter": "~6.0.0",
        "karma": "~5.2.3",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage-istanbul-reporter": "~3.0.3",
        "karma-jasmine": "~4.0.1",
        "karma-jasmine-html-reporter": "~1.5.4",
        "ng-packagr": "~10.1.2",
        "protractor": "~7.0.0",
        "scss-bundle": "~3.1.2",
        "semantic-release": "~17.3.1",
        "ts-node": "~9.1.1",
        "typescript": "~4.0.3"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint --edit"
        }
    }
}
