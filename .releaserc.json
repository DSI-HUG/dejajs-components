{
    "branches": [
        "master",
        {
            "name": "next",
            "prerelease": true
        }
    ],
    "plugins": [
        [
            "@semantic-release/commit-analyzer", {
                "preset": "angular",
                "releaseRules": [{
                        "breaking": true,
                        "release": "minor"
                    },
                    {
                        "type": "docs",
                        "scope": "README",
                        "release": "patch"
                    },
                    {
                        "type": "refactor",
                        "release": "patch"
                    },
                    {
                        "type": "style",
                        "release": "patch"
                    },
                    {
                        "type": "ci",
                        "release": "minor"
                    },
                    {
                        "type": "chore",
                        "release": "major"
                    }
                ],
                "parserOpts": {
                    "noteKeywords": []
                }
            }
        ],
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "projects/deja-js/component/CHANGELOG.md"
            }
        ],
        [
            "@semantic-release/npm",
            {
                "pkgRoot": "dist/deja-js/component"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": ["projects/deja-js/component/CHANGELOG.md", "projects/deja-js/component/package.json"],
                "message": "chore(release): ${nextRelease.version} [skip ci]"
            }
        ]
    ],
    "repositoryUrl": "git@github.com:DSI-HUG/dejajs-components.git"
}
